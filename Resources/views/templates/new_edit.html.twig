{% extends '@SmallCrud/base_logged.html.twig' %}

{% block page_content %}
    <h1>{{ entityName }} creation</h1>

    {% form_theme form 'SmallCrudBundle:form:fields.html.twig' %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal form-label-left'}}) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <input class="btn btn-success" type="submit" value="Create" />
                <a class="btn btn-warning" href="{{ path('crud_list', {'entityName': entityName}) }}">Cancel</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
