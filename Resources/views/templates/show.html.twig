{% extends '@SmallCrud/base_logged.html.twig' %}

{% block page_content %}
    <h1>{{ entityName }}</h1>

    <div class="form-horizontal form-label-left">
        {% for attr in entityAttr %}
            <div class="form-group">
                <div class="control-label col-md-3">
                    {{ attr.name | capitalize }}
                </div>

                <div class="col-md-7">
                    <div class="form-control">
                        {% if attr.type == 'date' %}
                            {{ attribute(entity, attr.name) | date('Y-m-d') }}
                        {% else %}
                            {{ attribute(entity, attr.name) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <a class="btn btn-success pull-left" href="{{ path('crud_edit', {'entityName': entityName, 'id': filmScore.id }) }}">Edit</a>
                <a class="btn btn-warning pull-left" href="{{ path('crud_list', {'entityName': entityName}) }}">Cancel</a>
                <div class="pull-left">
                    {{ form_start(delete_form) }}
                        <button class="btn btn-danger">Delete</button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}